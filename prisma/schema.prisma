datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id             String   @id
  name           String
  campaign       String   // JSON stringifi√©e
  createdAt      DateTime @default(now())
  lastAccessed   DateTime @default(now())
}

model Chat {
  id         Int      @id @default(autoincrement())
  sessionId  String
  message    String
  createdAt  DateTime @default(now())

  @@index([sessionId])
}
